# ============================================
# 夸克网盘配置
# ============================================
QUARK_COOKIE=你的夸克网盘Cookie

# ============================================
# 数据库配置
# ============================================
DB_USERNAME=root
DB_PASSWORD=your_password
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=pan_library

# ============================================
# Telegram 配置（用于资源投稿功能）
# ============================================

# 必需：从 https://my.telegram.org 获取
TG_API_ID=your_api_id
TG_API_HASH=your_api_hash

# 可选：Session 名称（默认: quark_bot）
TG_SESSION_NAME=quark_bot

# 可选：Session 文件保存目录（默认: ./sessions）
# 建议使用绝对路径，避免在不同目录运行时找不到 session
TG_SESSION_DIR=./sessions

# 可选：代理配置（如果需要代理访问 Telegram）
TG_PROXY_HOST=127.0.0.1
TG_PROXY_PORT=7890

# ============================================
# TMDB 配置（用于获取影视信息）
# ============================================

# 可选：TMDB API Key，从 https://www.themoviedb.org/settings/api 获取
TMDB_API_KEY=your_tmdb_api_key

# ============================================
# 豆包AI配置（用于自动分类功能）
# ============================================

# 必需：豆包AI API Key，从字节跳动火山引擎获取
# 访问 https://console.volcengine.com/ark 获取
ARK_API_KEY=your_ark_api_key

# 必需：豆包AI模型ID（endpoint ID）
# 在火山引擎控制台创建推理接口后获取
ARK_MODEL_ID=your_model_endpoint_id

# ============================================
# WebUI 配置
# ============================================
WEBUI_USERNAME=admin
WEBUI_PASSWORD=admin123

# ============================================
# GitHub 加速代理（可选）
# ============================================
GH_PROXY=https://ghproxy.com/

# ============================================
# 脚本路径配置（Docker 部署时使用）
# ============================================
SCRIPT_PATH=./quark_auto_save.py
CONFIG_PATH=./config/quark_config.json

# ============================================
# 调试模式
# ============================================
DEBUG=False
